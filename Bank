#include<iostream>
#include<iomanip>
#include<cstring>

using namespace std;
class Bank
{
	private:
		int accno;
		string name;
		string title;
		int balance;
	
	public:
		void setData()
		{
			cin>>this->accno;
			cout<<"Enter the Name: ";
			cin>>this->name;
			cout<<"Enter Title: ";
			cin>>this->title;
			cout<<"Balance: ";
			cin>>this->balance;
		}
		void displayData()
		{
			cout<<"Account Number: "<<accno<<endl;
			cout<<"Name: "<<name<<endl;
			cout<<"Title: "<<title<<endl;
			cout<<"Balance: "<<balance<<endl;
		}
};

int main()
{
	Bank x;
	x.setData();
	x.displayData();
	return 0;
}
